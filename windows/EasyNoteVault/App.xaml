<Application x:Class="EasyNoteVault.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <!-- ==================== 苹果风格颜色资源 ==================== -->
        <Color x:Key="ApplePrimaryColor">#007AFF</Color>
        <Color x:Key="ApplePrimaryHoverColor">#0056CC</Color>
        <Color x:Key="AppleSecondaryColor">#F5F5F7</Color>
        <Color x:Key="AppleBorderColor">#D2D2D7</Color>
        <Color x:Key="AppleTextColor">#1D1D1F</Color>
        <Color x:Key="AppleWhiteColor">#FFFFFF</Color>
        <Color x:Key="AppleDangerColor">#FF3B30</Color>
        <Color x:Key="AppleDangerHoverColor">#CC2F26</Color>
        <Color x:Key="AppleRowAltColor">#FAFAFA</Color>
        
        <!-- 画刷资源 -->
        <SolidColorBrush x:Key="ApplePrimaryBrush" Color="{StaticResource ApplePrimaryColor}"/>
        <SolidColorBrush x:Key="ApplePrimaryHoverBrush" Color="{StaticResource ApplePrimaryHoverColor}"/>
        <SolidColorBrush x:Key="AppleSecondaryBrush" Color="{StaticResource AppleSecondaryColor}"/>
        <SolidColorBrush x:Key="AppleBorderBrush" Color="{StaticResource AppleBorderColor}"/>
        <SolidColorBrush x:Key="AppleTextBrush" Color="{StaticResource AppleTextColor}"/>
        <SolidColorBrush x:Key="AppleWhiteBrush" Color="{StaticResource AppleWhiteColor}"/>
        <SolidColorBrush x:Key="AppleDangerBrush" Color="{StaticResource AppleDangerColor}"/>
        <SolidColorBrush x:Key="AppleDangerHoverBrush" Color="{StaticResource AppleDangerHoverColor}"/>
        <SolidColorBrush x:Key="AppleRowAltBrush" Color="{StaticResource AppleRowAltColor}"/>

        <!-- ==================== 苹果风格按钮样式 ==================== -->
        <Style x:Key="AppleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ApplePrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource AppleWhiteBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ApplePrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 小型图标按钮样式（用于眼睛和删除） -->
        <Style x:Key="AppleIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AppleSecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 删除按钮样式 -->
        <Style x:Key="AppleDeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource AppleDangerBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AppleDangerBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource AppleWhiteBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ==================== 苹果风格 DataGrid 样式 ==================== -->
        <Style x:Key="AppleDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource AppleWhiteBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AppleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource AppleWhiteBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource AppleRowAltBrush}"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource AppleBorderBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="44"/>
        </Style>

        <!-- DataGrid 列头样式 -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource AppleSecondaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource AppleTextBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource AppleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <!-- DataGrid 单元格样式 -->
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E5F0FF"/>
                    <Setter Property="Foreground" Value="{StaticResource AppleTextBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
