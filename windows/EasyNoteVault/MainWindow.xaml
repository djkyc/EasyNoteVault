<Window x:Class="EasyNoteVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasyNoteVault"
        Width="1000"
        Height="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Text="EasyNoteVault"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- 表格 -->
        <DataGrid x:Name="VaultGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  IsReadOnly="False"
                  SelectionUnit="Cell"
                  HeadersVisibility="Column"
                  SelectionMode="Single">

            <!-- 右键菜单 -->
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="粘贴"
                              Click="PasteMenuItem_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <!-- 列定义 -->
            <DataGrid.Columns>

                <DataGridTextColumn Header="名称"
                                    Binding="{Binding Name}"
                                    Width="150"/>

                <DataGridTextColumn Header="网站"
                                    Binding="{Binding Url}"
                                    Width="250"/>

                <DataGridTextColumn Header="账号"
                                    Binding="{Binding Account}"
                                    Width="200"/>

                <DataGridTextColumn Header="密码"
                                    Binding="{Binding Password}"
                                    Width="200"/>

                <DataGridTextColumn Header="备注"
                                    Binding="{Binding Remark}"
                                    Width="*"/>

            </DataGrid.Columns>
        </DataGrid>

        <!-- 新增按钮 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0,10,0,0">
            <Button Content="＋ 新增一行"
                    Width="120"
                    Height="32"
                    Click="AddRow_Click"/>
        </StackPanel>
    </Grid>
</Window>
