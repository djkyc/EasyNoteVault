<Window x:Class="EasyNoteVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasyNoteVault  |  By: djcyc"
        Width="1000"
        Height="650"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部区域 -->
        <DockPanel Grid.Row="0"
                   Margin="0,0,0,10"
                   LastChildFill="False">

            <!-- 左侧标题 -->
            <TextBlock Text="EasyNoteVault-随记"
                       FontSize="22"
                       FontWeight="Bold"
                       DockPanel.Dock="Left"/>

            <!-- 右侧操作区 -->
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right">

                <!-- 搜索框 -->
                <TextBox x:Name="SearchBox"
                         Width="250"
                         Height="28"
                         Margin="0,0,10,0"
                         VerticalContentAlignment="Center"
                         TextChanged="SearchBox_TextChanged"
                         ToolTip="搜索（名称 / 网站 / 账号 / 备注）"/>

                <!-- 导入 -->
                <Button Content="导入"
                        Width="80"
                        Margin="0,0,5,0"
                        Click="Import_Click"/>

                <!-- 导出 -->
                <Button Content="导出"
                        Width="80"
                        Click="Export_Click"/>

                <!-- WebDAV -->
                <Button Content="WebDAV"
                        Width="80"
                        Margin="8,0,0,0"
                        Click="WebDav_Click"/>

                <!-- 状态点 -->
                <Button x:Name="WebDavStatusBtn"
                        Width="18"
                        Height="18"
                        Margin="6,0,0,0"
                        Click="WebDavStatus_Click"
                        Background="Gray"
                        BorderThickness="0"
                        ToolTip="WebDAV 状态">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="{TemplateBinding Background}" Stroke="Transparent"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </DockPanel>

        <!-- 主表格 -->
        <DataGrid x:Name="VaultGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  IsReadOnly="False"
                  SelectionUnit="Cell"
                  RowHeight="34"
                  FontSize="14"
                  ContextMenuOpening="VaultGrid_ContextMenuOpening"
                  PreviewMouseLeftButtonDown="VaultGrid_PreviewMouseLeftButtonDown"
                  PreviewMouseDoubleClick="VaultGrid_PreviewMouseDoubleClick"
                  CellEditEnding="VaultGrid_CellEditEnding">

            <!-- 右键菜单 -->
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="粘贴"
                              Click="PasteMenuItem_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <!-- 列定义（只保留：名称 / 网站 / 账号 / 密码 / 备注） -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="名称"
                                    Binding="{Binding Name}"
                                    Width="150"/>

                <DataGridTextColumn Header="网站"
                                    Binding="{Binding Url}"
                                    Width="250"/>

                <!-- ✅ 账号列：右侧小符号按钮 ▼{数量} -->
                <DataGridTemplateColumn Header="账号" Width="220">
                    <!-- 显示模板 -->
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="26"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Account}"
                                           VerticalAlignment="Center"
                                           Margin="6,0,4,0"/>

                                <Button Grid.Column="1"
                                        Width="22"
                                        Height="18"
                                        Padding="0"
                                        Margin="0,0,4,0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        Click="ManageCreds_Click"
                                        Content="{Binding Credentials.Count, StringFormat=▼{0}}"
                                        ToolTip="{Binding Credentials.Count, StringFormat=多账号：{0} 组（点击管理）}"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                    <!-- 编辑模板 -->
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="26"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{Binding Account, UpdateSourceTrigger=PropertyChanged}"
                                         VerticalContentAlignment="Center"
                                         Margin="4,0,4,0"/>

                                <Button Grid.Column="1"
                                        Width="22"
                                        Height="18"
                                        Padding="0"
                                        Margin="0,0,4,0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        Click="ManageCreds_Click"
                                        Content="{Binding Credentials.Count, StringFormat=▼{0}}"
                                        ToolTip="{Binding Credentials.Count, StringFormat=多账号：{0} 组（点击管理）}"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="密码"
                                    Binding="{Binding Password}"
                                    Width="220"/>

                <DataGridTextColumn Header="备注"
                                    Binding="{Binding Remark}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ✅ 轻提示 Toast（不打断输入） -->
        <Border x:Name="ToastBorder"
                Grid.RowSpan="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,46,10,0"
                Padding="10,6"
                Background="#CC000000"
                CornerRadius="6"
                Opacity="0"
                Visibility="Collapsed"
                Panel.ZIndex="999">
            <TextBlock x:Name="ToastText"
                       Foreground="White"
                       FontSize="13"
                       Text="已复制"/>
        </Border>

    </Grid>
</Window>
