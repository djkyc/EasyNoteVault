<Window x:Class="EasyNoteVault.WebDavSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WebDAV 设置"
        Width="520" Height="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <CheckBox x:Name="EnableBox"
                  Content="启用 WebDAV 实时备份（保存后自动上传）"
                  Grid.Row="0" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="类型：" Width="70" VerticalAlignment="Center"/>
            <ComboBox x:Name="ProviderBox" Width="380" SelectionChanged="ProviderBox_SelectionChanged">
                <ComboBoxItem Content="坚果云（默认模板）"/>
                <ComboBoxItem Content="自定义 WebDAV"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="BaseUrl：" Width="70" VerticalAlignment="Center"/>
            <TextBox x:Name="BaseUrlBox" Width="380"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="远端目录：" Width="70" VerticalAlignment="Center"/>
            <TextBox x:Name="FolderBox" Width="180" Margin="0,0,10,0"/>
            <TextBlock Text="文件：" VerticalAlignment="Center"/>
            <TextBox x:Name="FileBox" Width="140" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="账号：" Width="70" VerticalAlignment="Center"/>
                <TextBox x:Name="UserBox" Width="380"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="密码：" Width="70" VerticalAlignment="Center"/>
                <PasswordBox x:Name="PassBox" Width="380"/>
            </StackPanel>

            <TextBlock Margin="0,10,0,0" Foreground="Gray"
                       Text="坚果云请使用“第三方应用密码/应用授权密码”（安全选项 → 第三方应用管理）。"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="测试连接" Width="90" Margin="0,0,10,0" Click="Test_Click"/>
            <Button Content="保存" Width="90" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="取消" Width="90" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
